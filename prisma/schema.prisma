generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL") //PostgreSQL connection string with pgBouncer config â€” used by Prisma Client
  directUrl = env("DIRECT_URL")  //PostgreSQL connection string used for migrations
}


model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  bookmarks Bookmark[]
}

model Bookmark {
  id    Int     @id @default(autoincrement())
  url   String  @unique
  name  String?
  description String?
  user User?    @relation(fields: [userId], references: [id])
  categories Category[]
  userId Int?
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  bookmarks Bookmark[]
}

