generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") //PostgreSQL connection string with pgBouncer config â€” used by Prisma Client
  directUrl = env("DIRECT_URL")  //PostgreSQL connection string used for migrations
  schemas = ["public"]
}


model category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  bookmarks bookmark[]
  @@map("categories")
  @@schema("public")
}

model bookmark {
  id    Int     @id @default(autoincrement())
  url   String  
  name  String?
  description String?
  user user?    @relation(fields: [userId], references: [id])
  categories category[]
  userId Int?
  @@map("bookmarks")
  @@schema("public")
}

model user {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  bookmarks bookmark[]
  @@map("users")
  @@schema("public")
}

